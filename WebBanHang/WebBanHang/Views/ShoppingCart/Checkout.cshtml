@model Order
@{
    ViewData["Title"] = "Checkout";
}

<h2 class="mb-4">Checkout</h2>

<form asp-action="Checkout" method="post" class="card p-4 shadow-lg">
    <div class="form-group mb-3">
        <label asp-for="ShippingAddress" class="form-label">Shipping Address</label>
        <input asp-for="ShippingAddress" class="form-control" placeholder="Enter your address" required />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Notes" class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control" placeholder="Additional instructions"></textarea>
    </div>

    <button type="submit" class="btn btn-primary w-100">Place Order</button>
</form>
